@model IList<EazyWizy.Domain.Entities.LHSBrandFilter>
<div class="ew-lhs-div-brand-filter">
    <div class="ew-lhs-brand-header-filter ew-cursor">
        <div class="ew-lhs-filter-header-font">Brands</div>
        <div class="ew-lhs-div-filterclear">
            <img src="~/Content/Images/clearFilter.ico" class="ew-lhs-filterclear-image" alt="" />
            <span style="color:lightgrey">clear</span>        
        </div>
    </div>  
    <div class="ew-lhs-div-brandlist-filter">
        <ul class="ew-lhs-ul">
            @foreach (var item in Model.ToList())
            {
                <li class='ew-lhs-filter-li ew-lhs-font'>
                    <input type="checkbox" style="cursor:inherit;" id="@item.IdBrand" />
                    <span>                   
                        @item.Name                  
                    </span>     
                </li>
            }
        </ul>
    </div>  
</div>
<div class="ew-lhs-div-rating-filter ew-lhs-filter-margin">
    @*Rating Related *@
    <div class="ew-lhs-rating-header-filter">
        <div style="display:inherit;font-size:17px">Ratings</div>
        <div class="ew-lhs-div-filterclear" style="display:inherit;float:right;cursor:pointer;margin-top:2px">
            <img src="~/Content/Images/clearFilter.ico" style="width:15px;vertical-align:middle;margin-top:-2px" alt="" />
            <span style="color:lightgrey">clear</span>         
        </div>
    </div>        
    <div class="ew-lhs-div-ratinglist-filter">
        <ul class="ew-lhs-ul">          
            <li class='ew-lhs-filter-li ew-lhs-font'>
                <input type="checkbox" style="cursor:inherit;"/>
                <span>5 Star</span>     
            </li>          
            <li class='ew-lhs-filter-li ew-lhs-font'>
                <input type="checkbox" style="cursor:inherit;"/>
                <span>4 Star</span>     
            </li>          
            <li class='ew-lhs-filter-li ew-lhs-font'>
                <input type="checkbox" style="cursor:inherit;"/>
                <span>3 Star</span>     
            </li>          
            <li class='ew-lhs-filter-li ew-lhs-font'>
                <input type="checkbox" style="cursor:inherit;"/>
                <span>2 Star</span>     
            </li>          
            <li class='ew-lhs-filter-li ew-lhs-font'>
                <input type="checkbox" style="cursor:inherit;"/>
                <span>1 Star</span>     
            </li>          
        </ul>
    </div>  
</div>

